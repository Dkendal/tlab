<section class="tlab-post-preview">
  <% if post.author.respond_to? :google_plus_image %>
    <div class="portrait">
      <div class="image">
        <%= image_tag post.author.google_plus_image "200" %>
      </div>
    </div>
  <% end %>

  <div class="portrait-offset-horizontal">
    <header>
      <div>
        <div class="btn-group post-controls pull-right">
          <% if can? :manage, post %>
            <%= link_to t('.edit'), edit_post_path(post), class: 'btn btn-small edit' %>
            <%= link_to t('.delete'), post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-small btn-danger delete' %>
          <% end %>
        </div>

        <h2>
          <%= post.title.titlecase %>
        </h2>
      </div>

      <p>
        <span class='publishedAt'><%= l post.published_at %></span>

        <% if post.author.respond_to? :given_name %>
          <span class='name-first'><%= post.author.given_name.titlecase %></span>
        <% end %>

        <% if post.author.respond_to? :family_name %>
          <span class='name-last'><%= post.author.family_name.titlecase %></span>
        <% end %>
      </p>
    </header>

    <article>
        <p>
          <%= post.preview.html_safe %>
        </p>
    </article>

    <footer>
      <%= link_to t('.link-to-show'), post, class: 'read-more' %>
    </footer>
  </div>
</section>
